# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# PostgreSQL with pgvector
DATABASE_URL=postgresql://postgres:password@localhost:5432/sec_rag
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=sec_rag
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Alternative: Pinecone (optional)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=sec-filings

# Alternative: Google Cloud (optional)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
GCS_BUCKET_NAME=your-bucket-name

# SEC EDGAR API (optional - for higher rate limits)
SEC_API_USER_AGENT=YourName your@email.com

# Application Settings
LOG_LEVEL=INFO
CACHE_DIR=./cache
DATA_DIR=./data
